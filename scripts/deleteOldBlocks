#!/usr/bin/env node

const moment = require('moment')
const client = require('../server/database')

;(async function deleteOldBlocks() {

  const before = moment()
    .subtract(Number(process.argv[2]), 'days')
    .toDate()
    .toISOString()

  await client.query(
    `DELETE FROM blocks WHERE timestamp < $1`,
    [before]
  )

  process.exit(1)
})()



